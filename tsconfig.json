{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "components/*": ["src/components/*"],
      "context/*": ["src/context/*"],
      "assets/*": ["src/assets/*"]
    }
  }
}
